<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Shoesly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="background">@color/white</item>
        <item name="backgroundColor">@color/off_white</item>

        <!-- Bottom App Bar -->
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>